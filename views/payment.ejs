<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TakaX Payment Flow</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            margin: 0;
            min-height: 100vh;
            padding: 20px;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e9f2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .container {
            width: 100%;
            max-width: 550px;
            background: white;
            border-radius: 0px;
            /* padding: 30px; */
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            position: relative;
        }
        .screen {
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .screen.active {
            display: block;
            opacity: 1;
        }
        .logo {
            text-align: center;
            margin: 0 0 20px;
            font-size: 32px;
            color: #2196F3;
            font-weight: bold;
            letter-spacing: 1px;
            text-shadow: 2px 2px 4px rgba(33,150,243,0.1);
            padding-top: 30px;
        }
        .divider {
            /* width: 100%;
            height: 2px;
            margin: 20px 0; */
        }
        .header-content {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
            margin-top: 30px;
            padding-left: 30px;
        }
        .header-image {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 8px;
            border-color: 1px solid gray;
        }
        .header-title {
            font-size: 16px;
            color: #333;
            margin: 0;
            font-weight: 300;
            
        }
        .input-field {
            position: relative;
            background: linear-gradient(145deg, #1e88e5, #2196F3);
            padding: 30px;
            /* border-radius: 12px; */
            margin-bottom: 10px;
            box-shadow: 0 4px 15px rgba(33,150,243,0.2);
            transition: transform 0.3s ease;
        }
        .loading-overlay {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.9);
            /* border-radius: 12px; */
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        .loading-dots {
            display: flex;
            gap: 8px;
        }
        .dot {
            width: 12px;
            height: 12px;
            background: #2196F3;
            border-radius: 50%;
            animation: bounce 1.4s infinite ease-in-out;
        }
        .dot:nth-child(1) { animation-delay: -0.32s; }
        .dot:nth-child(2) { animation-delay: -0.16s; }
        @keyframes bounce {
            0%, 80%, 100% { transform: scale(0); }
            40% { transform: scale(1); }
        }
        .input-field:hover {
            transform: translateY(-2px);
        }
        .input-label {
            color: white;
            margin-bottom: 15px;
            display: block;
            font-size: 16px;
            font-weight: 500;
            text-align: center;
        }
        input {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            box-sizing: border-box;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
        input:focus {
            outline: none;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }
        .terms {
            text-align: center;
            margin: 15px 0;
            color: white;
            font-size: 16px;
            font-weight: 500;
        }
        .error-message {
            color: white;
            text-align: center;
            margin-top: 10px;
            font-size: 14px;
            min-height: 20px;
        }
        .button-container {
            display: flex;
            gap: 15px;
            margin-top: 20px;
            padding: 30px;
        }
        button {
            flex: 1;
            padding: 16px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .cancel-btn {
            background-color: #f5f5f5;
            color: #333;
        }
        .cancel-btn:hover {
            background-color: #e0e0e0;
        }
        .confirm-btn {
            background-color: #9e9e9e;
            color: white;
            opacity: 0.8;
        }
        .confirm-btn.active {
            background-color: #2196F3;
            opacity: 1;
            box-shadow: 0 4px 15px rgba(33,150,243,0.3);
        }
        .confirm-btn.active:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(33,150,243,0.4);
        }
        .footer {
            text-align: center;
            margin-top: 30px;
            color: #666;
            font-size: 14px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Account Number Screen -->
        <div class="screen active" id="accountScreen">
            <div class="logo">TakaX</div>
            <hr class="divider">
            <div class="header-content">
                <img src="https://thumbs.dreamstime.com/b/national-flags-261957113.jpg" alt="Demo" class="header-image">
                <h5 class="header-title">Merchant : Test Demo</h5>
            </div>
            <div class="input-field">
                <div class="loading-overlay">
                    <div class="loading-dots">
                        <div class="dot"></div>
                        <div class="dot"></div>
                        <div class="dot"></div>
                    </div>
                </div>
                <label class="input-label">Enter Account Number</label>
                <input type="text" id="accountNumber" placeholder="01XXXXXXXXX" maxlength="11">
                <div class="error-message"></div>
                <div class="terms">
                    Confirm and proceed, terms & conditions
                </div>
            </div>
            <div class="button-container">
                <button class="cancel-btn">Cancel</button>
                <button class="confirm-btn" id="accountConfirmBtn">Confirm</button>
            </div>
        </div>

        <!-- OTP Screen -->
        <div class="screen" id="otpScreen">
            <div class="logo">TakaX</div>
            <hr class="divider">
            <div class="header-content">
                <img src="/api/placeholder/60/60" alt="Demo" class="header-image">
                <h2 class="header-title">Test Demo</h2>
            </div>
            <div class="input-field">
                <div class="loading-overlay">
                    <div class="loading-dots">
                        <div class="dot"></div>
                        <div class="dot"></div>
                        <div class="dot"></div>
                    </div>
                </div>
                <label class="input-label">Enter OTP</label>
            
                <input type="text" id="otpNumber" placeholder="XXXXXX" maxlength="6">
                <div class="error-message"></div>
                <div class="terms">
                    Confirm and proceed, terms & conditions
                </div>
            </div>
            <div class="button-container">
                <button class="cancel-btn">Cancel</button>
                <button class="confirm-btn" id="otpConfirmBtn">Confirm</button>
            </div>
        </div>

        <!-- PIN Screen -->
        <div class="screen" id="pinScreen">
            <div class="logo">TakaX</div>
            <hr class="divider">
            <div class="header-content">
                <img src="/api/placeholder/60/60" alt="Demo" class="header-image">
                <h2 class="header-title">Test Demo</h2>
            </div>
            <div class="input-field">
                <div class="loading-overlay">
                    <div class="loading-dots">
                        <div class="dot"></div>
                        <div class="dot"></div>
                        <div class="dot"></div>
                    </div>
                </div>
                <label class="input-label">Enter PIN</label>
                <input type="password" id="pinNumber" placeholder="XXXXX" maxlength="5">
                <div class="error-message"></div>
                <div class="terms">
                    Confirm and proceed, terms & conditions
                </div>
            </div>
            <div class="button-container">
                <button class="cancel-btn">Cancel</button>
                <button class="confirm-btn" id="pinConfirmBtn">Confirm</button>
            </div>
        </div>

        <div class="footer">
            Â© 2025 TakaX, All Rights Reserved
        </div>
    </div>

    <script>
        const screens = {
            account: document.getElementById('accountScreen'),
            otp: document.getElementById('otpScreen'),
            pin: document.getElementById('pinScreen')
        };
        let callbackURL = null;

        async function fetchCallbackURL() {
            try {
                const response = await fetch('http://localhost:3000/checkout/create/payment');
                const data = await response.json();
                if (data.callbackurl) {
                    callbackURL = data.callbackurl;
                } else {
                    console.error('Callback URL not provided in the API response');
                }
            } catch (error) {
                console.error('Failed to fetch the callback URL:', error);
            }
        }

        fetchCallbackURL();

        function showLoading() {
            const activeScreen = document.querySelector('.screen.active');
            const loadingOverlay = activeScreen.querySelector('.loading-overlay');
            loadingOverlay.style.display = 'flex';
            return new Promise(resolve => setTimeout(resolve, 2000));
        }

        function hideLoading() {
            const activeScreen = document.querySelector('.screen.active');
            const loadingOverlay = activeScreen.querySelector('.loading-overlay');
            loadingOverlay.style.display = 'none';
        }

        function showScreen(screenId) {
            Object.values(screens).forEach(screen => {
                screen.classList.remove('active');
            });
            screens[screenId].classList.add('active');
        }

        function setupInputValidation(input, length, confirmBtn) {
            input.addEventListener('input', function (e) {
                this.value = this.value.replace(/\D/g, '');
                if (this.value.length === length) {
                    confirmBtn.classList.add('active');
                } else {
                    confirmBtn.classList.remove('active');
                }
            });
        }

        function redirectToCallback() {
            if (callbackURL) {
                window.location.href = callbackURL;
            } else {
                console.error('Callback URL is not available.');
            }
        }

        // Account Number Screen
        const accountInput = document.getElementById('accountNumber');
        const accountConfirmBtn = document.getElementById('accountConfirmBtn');
        setupInputValidation(accountInput, 11, accountConfirmBtn);

        accountConfirmBtn.addEventListener('click', async function () {
            if (this.classList.contains('active')) {
                await showLoading();
                hideLoading();
                showScreen('otp');
            }
        });

        // OTP Screen
        const otpInput = document.getElementById('otpNumber');
        const otpConfirmBtn = document.getElementById('otpConfirmBtn');
        const otpErrorMsg = otpScreen.querySelector('.error-message');
        setupInputValidation(otpInput, 6, otpConfirmBtn);

        otpConfirmBtn.addEventListener('click', async function () {
            if (this.classList.contains('active')) {
                await showLoading();
                hideLoading();

                if (otpInput.value === '123456') {
                    otpErrorMsg.textContent = '';
                    showScreen('pin');
                } else {
                    otpErrorMsg.textContent = 'Wrong OTP';
                }
            }
        });

        // PIN Screen
        const pinInput = document.getElementById('pinNumber');
        const pinConfirmBtn = document.getElementById('pinConfirmBtn');
        const pinErrorMsg = pinScreen.querySelector('.error-message');
        setupInputValidation(pinInput, 5, pinConfirmBtn);

        pinConfirmBtn.addEventListener('click', async function () {
            if (this.classList.contains('active')) {
                await showLoading();
                hideLoading();

                if (pinInput.value === '12345') {
                    pinErrorMsg.textContent = '';
                    redirectToCallback();
                } else {
                    pinErrorMsg.textContent = 'Wrong PIN';
                }
            }
        });

        // Cancel buttons
        document.querySelectorAll('.cancel-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                if (confirm('Are you sure you want to cancel?')) {
                    redirectToCallback();
                }
            });
        });
    </script>
</body>
</html>